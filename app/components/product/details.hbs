<div class="product-details">
  <section>
    <h3>{{@name}}</h3>
    <div class="text-warning">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star-half"></i>
    </div>
  </section>
  <section>
    <del class="small text-black-50">${{@price.original}}</del>
    <i class="text-danger font-weight-bold">${{@price.current}}</i>
  </section>

  {{#if @isDetails}}
  <div>
    <h5>Color</h5>
    <div class="product-colors active-{{@color}}">
      {{#each @colors as |colorInfo|}}
      <span role="button" class="product-color {{concat 'color-' colorInfo.color}}"
        {{on "click" (fn @onChangeColor colorInfo.color)}}></span>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>
